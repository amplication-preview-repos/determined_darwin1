datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  bio       String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  interests String?
  photos    Json?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Message {
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  receiver  String?
  sender    String?
  sentAt    DateTime?
  updatedAt DateTime  @updatedAt
}

model Match {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  matchDate DateTime?
  updatedAt DateTime  @updatedAt
  user1     String?
  user2     String?
}

model User {
  createdAt   DateTime  @default(now())
  dateOfBirth DateTime?
  email       String?   @unique
  firstName   String?
  gender      String?
  id          String    @id @default(cuid())
  lastName    String?
  location    String?
  password    String
  profiles    Profile[]
  roles       Json
  updatedAt   DateTime  @updatedAt
  username    String    @unique
}
